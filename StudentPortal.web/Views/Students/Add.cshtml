@model StudentPortal.web.Models.AddStudentViewModel

<form method="post" class="container">
    <h1> Add Student</h1>
    <div class="mt-3">
    
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name"  class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email"  class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="text" id="Phone" name="Phone"  class="form-control" asp-for="Phone">
    </div>
    <div class="form-group form-check">
        <input type="checkbox" id="Subscribed" name="Subscribed"  class="form-check-input" asp-for="Subscribed">
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

